    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py (Poetry)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",

            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": ["--pid", "1234", "--interval", "5"],
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}"
        }
    ]
}
